    <init>
        <command>/macro book 4</command>
        <command delay="1000">/macro set 2</command>
        <command>/echo [Switching to MNK Macros]</command>
        <command>/bind F9 /tpmode</command>
        <command>/bind F10 /status</command>
        <command>/bind F12 /main</command>
        <command delay="2000">/lockstyle on</command>
    </init>
    <variables>
        <var name="weapon">0</var> <!-- Start in mode 0 (Verethragna) -->
        <var name="tpmode">0</var> <!-- Start in Standard TP Mode -->
        <var name="main">Verethragna</var>
        <var name="tptype">Standard</var>
    </variables>
    <inputcommands>
        <!--
        0 Verethragna
        1 Spharai
        2 Glanzfaust
        -->
        <cmd input="/main">
            <if advanced="$weapon=2">
                <setvar name="main" value="Verethragna" />
                <setvar name="weapon" value="0" />
                <doidlegear />
            </if>
            <elseif advanced="$weapon=1">
                <setvar name="main" value="Glanzfaust" />
                <setvar name="weapon" value="2" />
                <doidlegear />
            </elseif>
            <else>
                <setvar name="main" value="Spharai" />
                <setvar name="weapon" value="1" />
                <doidlegear />
            </else>
            <command>/echo [$main] [$tptype]</command>
        </cmd>
        <!--
        0 Standard TP
        1 Defensive TP
        -->
        <cmd input="/tpmode">
            <if advanced="$tpmode=1">
                <setvar name="tpmode" value="0" />
                <setvar name="tptype" value="Standard" />
                <doidlegear />
            </if>
            <else>
                <setvar name="tpmode" value="1" />
                <setvar name="tptype" value="Defensive" />
                <doidlegear />
            </else>
            <command>/echo [$main] [$tptype]</command>
        </cmd>
        <cmd input="/status">
            <equip>
                <back>Agema Cape</back>
            </equip>
            <doidlegear />
            <command>/echo [$main] [$tptype]</command>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape">
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged">
            <if advanced="$tpmode=1">
                <equip set="DEFTP" />
            </if>
            <else>
                <equip set="TP" />
            </else>
        </if>
        <else>
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" />
    </premagic>
    <midmagic>
        <if ad_skill="bluemagic|enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_skill="divinemagic">
            <if ad_name="Banish*|Holy*">
                <equip set="MagWS" />
            </if>
            <else>
                <equip set="MACC" />
            </else>
        </if>
    </midmagic>
    <jobability>
    </jobability>
    <weaponskill>
        <if ad_name="Victory*|Stringing*|Ascetic*">
            <equip set="WS">
                <ear2>Telos Earring</ear2>
            </equip>
        </if>
        <else>
            <equip set="WS" />
        </else>
    </weaponskill>
</ashitacast>
