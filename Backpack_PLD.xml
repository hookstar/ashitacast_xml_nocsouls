    <init>
        <command>/macro book 19</command>
        <command delay="1000">/macro set 2</command>
        <command>/echo [Switching to PLD Macros]</command>
        <command>/bind F9 /tpmode</command>
        <command>/bind F10 /status</command>
        <command>/bind F12 /main</command>
        <doidlegear />
        <command delay="4000">/lockstyleset 15</command>
    </init>
    <variables>
        <var name="tpmode">1</var> <!-- Start in Defensive TP Mode -->
        <var name="weapon">1</var> <!-- Start with Aegis/Burt -->
        <var name="cycle">0</var> <!-- for cycling through blu enmity spells -->
        <var name="tptype">Defensive</var>
        <var name="sub">Aegis</var>
        <var name="main">Burtgang</var>
    </variables>
    <inputcommands>
        <cmd input="/main">
            <if advanced="$weapon=1">
                <setvar name="main" value="Almace" />
                <setvar name="sub" value="Aegis" />
                <setvar name="weapon" value="0" />
                <doidlegear />
            </if>
            <else>
                <setvar name="main" value="Burtgang" />
                <setvar name="sub" value="Aegis" />
                <setvar name="weapon" value="1" />
                <doidlegear />
            </else>
            <command>/echo [$main] [$tptype]</command>
        </cmd>
        <!--
        0 Standard TP
        1 Defensive TP
        -->
        <cmd input="/tpmode">
            <if advanced="$tpmode=1">
                <setvar name="tpmode" value="0" />
                <setvar name="tptype" value="Standard" />
                <doidlegear />
            </if>
            <else>
                <setvar name="tpmode" value="1" />
                <setvar name="tptype" value="Defensive" />
                <doidlegear />
            </else>
            <command>/echo [$main] [$tptype]</command>
        </cmd>
        <cmd input="/status">
            <equip>
                <back>Mubvum. Mantle</back>
            </equip>
            <doidlegear />
            <command>/echo [$main] [$tptype]</command>
            <if buffactive="4|566">
                <command>/item "Panacea" me</command>
            </if>
            <elseif buffactive="6">
                <command>/item "Echo Drops" me</command>
            </elseif>
            <elseif buffactive="9|15">
                <equip lock="true">
                    <ring2>Purity Ring</ring2>
                </equip>
                <command>/item "Hallowed Water" me</command>
            </elseif>
            <elseif buffactive="11|12|21|128|129|130|131|132|133|134|135|136|137|138|139|140|141|142|144|145|146|147|148|149|174|175|404|557|558|559|560|561|562|563|564|567">
                <command>/item "Panacea" me</command>
            </elseif>
        </cmd>
        <cmd input="/cycle">
            <if advanced="$cycle=6">
                <command>//exuviation</command>
                <setvar name="cycle" value="5" />
            </if>
            <elseif advanced="$cycle=5">
                <command>//temporalshift</command>
                <setvar name="cycle" value="4" />
            </elseif>
            <elseif advanced="$cycle=4">
                <command>//lightofpenance</command>
                <setvar name="cycle" value="3" />
            </elseif>
            <elseif advanced="$cycle=3">
                <command>//actinicburst</command>
                <setvar name="cycle" value="2" />
            </elseif>
            <else>
                <command>//jettatura</command>
                <setvar name="cycle" value="6" />
            </else>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape">
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged">
            <if p_joblevel="99">
                <if advanced="$tpmode=1">
                    <equip set="DEFTP" />
                </if>
                <else>
                    <equip set="TP" />
                </else>
            </if>
            <else>
                <equip set="TP50" />
            </else>
        </if>
        <else>
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" />
        <if ad_name="Stoneskin|Metallic*|Diamondhide">
            <if buffactive="37">
                <command>/cancel 37</command>
            </if>
        </if>
        <if ad_name="Shock Spikes">
            <if buffactive="38">
                <command>/cancel 38</command>
            </if>
        </if>
    </premagic>
    <midmagic>
        <if ad_skill="enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_skill="bluemagic|divinemagic|healingmagic">
            <if ad_name="Cure*">
                <equip set="Cure" />
            </if>
            <elseif ad_name="Sudden*">
                <equip set="MACC" />
            </elseif>
            <else>
                <equip set="Enmity" />
            </else>
        </if>
    </midmagic>
    <jobability>
        <equip set="Enmity" />
    </jobability>
    <weaponskill>
        <if p_joblevel="99">
            <if ad_name="Uriel*|Seraph*|Shining*|Burning*|Red Lotus*|Sanguine*|Herculean*|Freeze*|Frost*">
                <equip set="MagWS" />
            </if>
            <elseif ad_name="Atonement">
                <equip set="Atonement" />
            </elseif>
            <else>
                <equip set="WS" />
            </else>
        </if>
        <else>
            <equip set="TP50" />
        </else>
    </weaponskill>
</ashitacast>
