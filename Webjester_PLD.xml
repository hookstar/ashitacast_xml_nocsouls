<ashitacast>
    <settings>
        <buffupdate>true</buffupdate>
        <statusupdate>true</statusupdate>
        <hpupdate>false</hpupdate>
        <autoupdate>false</autoupdate>
    </settings>
    <sets>
        <set name="idle">
            <main>$main</main>
            <sub>$sub</sub>
            <range augment="S182109392119204240">Bamboo Fish. Rod</range>
            <ammo augment="S182109392119204240">Lufaise Fly</ammo>
            <head>Rev. Coronet +3</head>
            <body>Rev. Surcoat +3</body>
            <hands>Rev. Gauntlets +3</hands>
            <legs>Blood Cuisses</legs>
            <feet>Rev. Leggings +3</feet>
            <neck>Loricate Torque +1</neck>
            <waist augment="S14964323890395218574">Chaac Belt</waist>
            <ear1>Etiolation Earring</ear1>
            <ear2 augment="S182152343102764236">Stm. Earring +1</ear2>
            <ring1>Defending Ring</ring1>
            <ring2>Gelatinous Ring +1</ring2>
            <back>Agema Cape</back>
        </set>
        <set name="TP" baseset="idle">
            <legs>Rev. Breeches +3</legs>
            <neck>Asperity Necklace</neck>
            <waist augment="S1496432389182864240">Windbuffet Belt +1</waist>
            <ear1 augment="S1496432389345534240">Mache Earring +1</ear1>
            <ear2 augment="S182109392119204240">Mache Earring +1</ear2>
            <ring1 augment="S1821294470965718574">Regal Ring</ring1>
            <ring2 augment="S1821187863554334839">Petrov Ring</ring2>
            <back augment="S1496432389345534240">Laic Mantle</back>
        </set>
        <set name="FastCast">
            <body augment="S6217489529050814476">Pilgrim Tunica</body>
            <ear2 augment="S182152343102764236">Stm. Earring +1</ear2>
            <ear1>Etiolation Earring</ear1>
            <ring1 augment="S6217489529050814476">Prolix Ring</ring1>
            <ring2 augment="S6217489529050814476">Ascetic's Ring</ring2>
        </set>
        <set name="Flash" baseset="TP">
            <ear2>Cryptic Earring</ear2>
            <ring1>Apeile Ring +1</ring1>
            <ring2 augment="S6217489529050814476">Ascetic's Ring</ring2>
            <back>Agema Cape</back>
            <feet>Chev. Sabatons +1</feet>
        </set>
        <set name="MACC" baseset="Idle">
            <ammo augment="S14968618926288334851">Sinking Minnow</ammo>
            <neck augment="S14968618926288334851">Voltsurge Torque</neck>
            <waist augment="S14968618926288334851">Virtuoso Belt</waist>
            <ear1 augment="S14968618926288334851">Andoaa Earring</ear1>
            <ear2 augment="S14968618926288334851">Moldavite Earring</ear2>
            <ring1 augment="S14968618926288334851">Stikini Ring</ring1>
            <ring2 augment="S14968618926288334851">Stikini Ring</ring2>
            <back augment="S14968618926288334851">Immortal's Cape</back>
        </set>
        <set name="MagWS" baseset="TP">
            <ammo augment="S7973728454464518565">Sabiki Rig</ammo>
            <neck augment="S7973728454464518565">Baetyl Pendant</neck>
            <waist augment="S7973728454464518565">Hachirin-no-Obi</waist>
            <ear1 augment="S7973728454464518565">Choleric Earring</ear1>
            <ear2 augment="S7973728454464518565">Tranquility Earring</ear2>
            <ring1 augment="S7973728454464518565">Stikini Ring +1</ring1>
            <ring2 augment="S7973728454464518565">Stikini Ring +1</ring2>
            <back augment="S7973728454464518565">Izdubar Mantle</back>
        </set>
        <include>
        </include>
    </sets>
    <init>
        <command>/macro book 19</command>
        <command delay="1000">/macro set 2</command>
        <command>/echo [Switching to PLD Macros]</command>
        <command>/bind F9 /main</command>
        <command>/bind F10 /sub</command>
        <command delay="2000">/lockstyle on</command>
    </init>
    <variables>
        <var name="switchm">1</var>
        <var name="switchs">1</var>
        <var name="sub">Aegis</var>
        <var name="main">Burtgang</var>
    </variables>
    <inputcommands>
        <cmd input="/main">
            <if advanced="$switchm=1">
                <setvar name="main" value="Almace" />
                <setvar name="switchm" value="0" />
                <doidlegear />
                <command>/echo [Almace Equipped]</command>
            </if>
            <else>
                <setvar name="main" value="Burtgang" />
                <setvar name="switchm" value="1" />
                <doidlegear />
                <command>/echo [Burtgang Equipped]</command>
            </else>
        </cmd>
        <cmd input="/sub">
            <if advanced="$switchs=1">
                <setvar name="sub" value="Blurred Shield +1" />
                <setvar name="switchs" value="0" />
                <doidlegear />
                <command>/echo [Blurred Shield +1 Equipped]</command>
            </if>
            <else>
                <setvar name="sub" value="Aegis" />
                <setvar name="switchs" value="1" />
                <doidlegear />
                <command>/echo [Aegis Equipped]</command>
            </else>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape">
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged">
            <if advanced="$switchs=1">
                <equip set="TP">
                    <neck>Loricate Torque +1</neck>
                    <ring1>Defending Ring</ring1>
                    <ring2>Gelatinous Ring +1</ring2>
                    <ear1>Etiolation Earring</ear1>
                    <waist>Nierenschutz</waist>
                    <back>Agema Cape</back>
                </equip>
            </if>
            <else>
                <equip set="TP" />
            </else>
        </if>
        <else>
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" />
    </premagic>
    <midmagic>
        <if ad_skill="bluemagic|enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_skill="divinemagic">
            <if ad_name="Banish*|Holy*">
                <equip set="MagWS" />
            </if>
            <else>
                <equip set="MACC" />
            </else>
        </if>
    </midmagic>
    <jobability>
    </jobability>
    <weaponskill>
        <if ad_name="Uriel*|Seraph*|Shining*|Burning*|Red Lotus*|Sanguine*">
            <equip set="MagWS" />
        </if>
        <else>
            <equip set="TP">
                <ear1>Telos Earring</ear1>
                <neck>Fotia Gorget</neck>
                <waist>Fotia Belt</waist>
            </equip>
        </else>
    </weaponskill>
</ashitacast>
