	<settings>
		<buffupdate>true</buffupdate>
		<statusupdate>true</statusupdate>
		<hpupdate>false</hpupdate>
		<autoupdate>false</autoupdate>
	</settings>
	<sets>
            <set name="idle">
                <main>$Mainhand</main>
                <sub>Utu Grip</sub>
                <range augment="S182109392119204240">Bamboo Fish. Rod</range>
                <ammo augment="S182109392119204240">Lufaise Fly</ammo>
                <head>Ig. Burgonet +2</head>
                <body>Ignominy Cuirass +2</body>
                <hands>Ig. Gauntlets +2</hands>
                <legs>Blood Cuisses</legs>
                <feet>Ig. Sollerets +2</feet>
                <neck>Loricate Torque +1</neck>
                <waist augment="S14964323890395218574">Chaac Belt</waist>
                <ear1>Etiolation Earring</ear1>
                <ear2 augment="S182152343102764236">Stm. Earring +1</ear2>
                <ring1>Defending Ring</ring1>
                <ring2>Gelatinous Ring +1</ring2>
                <back>Agema Cape</back>
            </set>
            <set name="TP" baseset="idle">
                <legs>Ig. Flanchard +2</legs>
                <neck>Asperity Necklace</neck>
                <waist augment="S1496432389182864240">Windbuffet Belt +1</waist>
                <ear1 augment="S1496432389345534240">Mache Earring +1</ear1>
                <ear2 augment="S182109392119204240">Mache Earring +1</ear2>
                <ring1>Regal Ring</ring1>
